// moddes.cpp -- Modified DES in C++ (single-block demo)
// Compile: g++ -O2 -std=c++17 -o moddes moddes.cpp

#include <bits/stdc++.h>
using namespace std;
using u64 = uint64_t;
using u32 = uint32_t;

// --- Standard DES tables (IP, FP, E, P, PC1, PC2, SHIFTS, S-boxes) ---
static const int IP[64] = {
 58,50,42,34,26,18,10,2,60,52,44,36,28,20,12,4,
 62,54,46,38,30,22,14,6,64,56,48,40,32,24,16,8,
 57,49,41,33,25,17,9,1,59,51,43,35,27,19,11,3,
 61,53,45,37,29,21,13,5,63,55,47,39,31,23,15,7
};
static const int FP[64] = {
 40,8,48,16,56,24,64,32,39,7,47,15,55,23,63,31,
 38,6,46,14,54,22,62,30,37,5,45,13,53,21,61,29,
 36,4,44,12,52,20,60,28,35,3,43,11,51,19,59,27,
 34,2,42,10,50,18,58,26,33,1,41,9,49,17,57,25
};
static const int E[48] = {
 32,1,2,3,4,5,4,5,6,7,8,9,8,9,10,11,12,13,
 12,13,14,15,16,17,16,17,18,19,20,21,20,21,22,23,24,25,
 24,25,26,27,28,29,28,29,30,31,32,1
};
static const int P[32] = {
 16,7,20,21,29,12,28,17,1,15,23,26,5,18,31,10,
 2,8,24,14,32,27,3,9,19,13,30,6,22,11,4,25
};
static const int PC1[56] = {
 57,49,41,33,25,17,9,1,58,50,42,34,26,18,
 10,2,59,51,43,35,27,19,11,3,60,52,44,36,
 63,55,47,39,31,23,15,7,62,54,46,38,30,22,
 14,6,61,53,45,37,29,21,13,5,28,20,12,4
};
static const int PC2[48] = {
 14,17,11,24,1,5,3,28,15,6,21,10,23,19,12,4,
 26,8,16,7,27,20,13,2,41,52,31,37,47,55,30,40,
 51,45,33,48,44,49,39,56,34,53,46,42,50,36,29,32
};
static const int SHIFTS[16] = {
 1,1,2,2,2,2,2,2,1,2,2,2,2,2,2,1
};
static const int SBOX[8][64] = {
{14,4,13,1,2,15,11,8,3,10,6,12,5,9,0,7,0,15,7,4,14,2,13,1,10,6,12,11,9,5,3,8,4,1,14,8,13,6,2,11,15,12,9,7,3,10,5,0,15,12,8,2,4,9,1,7,5,11,3,14,10,0,6,13},
{15,1,8,14,6,11,3,4,9,7,2,13,12,0,5,10,3,13,4,7,15,2,8,14,12,0,1,10,6,9,11,5,0,14,7,11,10,4,13,1,5,8,12,6,9,3,2,15},
{10,0,9,14,6,3,15,5,1,13,12,7,11,4,2,8,13,7,0,9,3,4,6,10,2,8,5,14,12,11,15,1,13,6,4,9,8,15,3,0,11,1,2,12,5,10,14,7},
{7,13,14,3,0,6,9,10,1,2,8,5,11,12,4,15,13,8,11,5,6,15,0,3,4,7,2,12,1,10,14,9,10,6,9,0,12,11,7,13,15,1,3,14,5,2,8,4},
{2,12,4,1,7,10,11,6,8,5,3,15,13,0,14,9,14,11,2,12,4,7,13,1,5,0,15,10,3,9,8,6,4,2,1,11,10,13,7,8,15,9,12,5,6,3,0,14},
{12,1,10,15,9,2,6,8,0,13,3,4,14,7,5,11,10,15,4,2,7,12,9,5,6,1,13,14,0,11,3,8,9,14,15,5,2,8,12,3,7,0,4,10,1,13,11,6},
{4,11,2,14,15,0,8,13,3,12,9,7,5,10,6,1,13,0,11,7,4,9,1,10,14,3,5,12,2,15,8,6,1,4,11,13,12,3,7,14,10,15,6,8,0,5,9,2},
{13,2,8,4,6,15,11,1,10,9,3,14,5,0,12,7,1,15,13,8,10,3,7,4,12,5,6,11,0,14,9,2,7,11,4,1,9,12,14,2,0,6,10,13,15,3,5,8}
};

// --- bit helpers
inline int getbit(u64 v, int pos1) { return (int)((v >> (64 - pos1)) & 1ULL); }
inline void setbit(u64 &v, int pos1, int b) { if (b) v |= (1ULL << (64 - pos1)); else v &= ~(1ULL << (64 - pos1)); }

// permute: input placed left-aligned in 64-bit semantics, table entries 1-based; returns low-aligned result (low n bits).
u64 permute(u64 in_left_aligned, const int *table, int n) {
    u64 out = 0;
    for (int i=0;i<n;++i) {
        int b = getbit(in_left_aligned, table[i]);
        out = (out << 1) | (u64)b;
    }
    // low-align
    out &= (~0ULL >> (64 - n));
    return out;
}

// expand 32->48 (in32 is low 32 bits), return low-aligned 48-bit
u64 expand32(u32 r) {
    u64 left = ((u64)r) << 32; // left-align 32-bit in 64-bit to use getbit(index)
    u64 out = 0;
    for (int i=0;i<48;++i) {
        int b = getbit(left, E[i]);
        out = (out << 1) | (u64)b;
    }
    out &= ((1ULL<<48)-1);
    return out;
}

// S-box substitution 48->32 (x low 48 bits)
u32 sbox_subst(u64 x48) {
    u32 out = 0;
    for (int i=0;i<8;++i) {
        int shift = (7-i)*6;
        uint8_t six = (x48 >> shift) & 0x3F;
        int row = ((six & 0x20) >> 4) | (six & 0x01);
        int col = (six >> 1) & 0x0F;
        uint8_t val = SBOX[i][row*16 + col];
        out = (out << 4) | (uint32_t)(val & 0x0F);
    }
    return out;
}

// P permutation on 32-bit low-aligned
u32 permute32(u32 v32) {
    u64 left = ((u64)v32) << 32;
    u32 out = 0;
    for (int i=0;i<32;++i) {
        int b = getbit(left, P[i]);
        out = (out << 1) | (uint32_t)b;
    }
    return out;
}

// key schedule -> 16 subkeys low-aligned 48-bit
void key_schedule(u64 key64, u64 subkeys[16]) {
    u64 perm56 = 0;
    for (int i=0;i<56;++i) {
        int b = getbit(key64, PC1[i]);
        perm56 = (perm56 << 1) | (u64)b;
    }
    uint32_t C = (uint32_t)((perm56 >> 28) & ((1u<<28)-1));
    uint32_t D = (uint32_t)(perm56 & ((1u<<28)-1));
    for (int r=0;r<16;++r) {
        int s = SHIFTS[r];
        C = ((C << s) | (C >> (28 - s))) & ((1u<<28)-1);
        D = ((D << s) | (D >> (28 - s))) & ((1u<<28)-1);
        u64 CD = (((u64)C) << 28) | D;
        u64 k48 = 0;
        for (int i=0;i<48;++i) {
            int idx = PC2[i];
            int b = (int)((CD >> (56 - idx)) & 1ULL);
            k48 = (k48 << 1) | (u64)b;
        }
        subkeys[r] = k48 & ((1ULL<<48)-1);
    }
}

// Xo on 48-bit inputs: split into s1,s2,s3 (sum=48) and XOR each segment (GF(2^n) add)
u64 Xo48(u64 T48, u64 K48, int s1, int s2, int s3) {
    // T48,K48 are low 48-bit
    u64 mask1 = (s1==64? ~0ULL : ((1ULL<<s1)-1));
    u64 mask2 = (s2==64? ~0ULL : ((1ULL<<s2)-1));
    u64 mask3 = (s3==64? ~0ULL : ((1ULL<<s3)-1));
    u64 seg1 = (T48 >> (s2 + s3)) & mask1;
    u64 seg2 = (T48 >> s3) & mask2;
    u64 seg3 = T48 & mask3;
    u64 k1 = (K48 >> (s2 + s3)) & mask1;
    u64 k2 = (K48 >> s3) & mask2;
    u64 k3 = K48 & mask3;
    u64 r1 = seg1 ^ k1;
    u64 r2 = seg2 ^ k2;
    u64 r3 = seg3 ^ k3;
    u64 res = (r1 << (s2 + s3)) | (r2 << s3) | r3;
    return res & ((1ULL<<48)-1);
}

// Xo on 32-bit inputs: derive s1,s2,s3 scaled from supplied (s1_48,s2_48,s3_48)
uint32_t Xo32(uint32_t A32, uint32_t B32, int s1_48, int s2_48, int s3_48) {
    // scale proportions to sum to 32
    int s1 = max(1, (s1_48 * 32) / 48);
    int s2 = max(1, (s2_48 * 32) / 48);
    int s3 = 32 - s1 - s2;
    if (s3 <= 0) { s3 = 32 - s1 - s2; if (s3<=0) { s3=1; if (s1+s2+s3>32) s2 = 32 - s1 - s3; } }
    uint32_t mask1 = (s1==32 ? 0xFFFFFFFFu : ((1u<<s1)-1));
    uint32_t mask2 = (s2==32 ? 0xFFFFFFFFu : ((1u<<s2)-1));
    uint32_t mask3 = (s3==32 ? 0xFFFFFFFFu : ((1u<<s3)-1));
    uint32_t seg1 = (A32 >> (s2 + s3)) & mask1;
    uint32_t seg2 = (A32 >> s3) & mask2;
    uint32_t seg3 = A32 & mask3;
    uint32_t k1 = (B32 >> (s2 + s3)) & mask1;
    uint32_t k2 = (B32 >> s3) & mask2;
    uint32_t k3 = B32 & mask3;
    uint32_t r1 = seg1 ^ k1;
    uint32_t r2 = seg2 ^ k2;
    uint32_t r3 = seg3 ^ k3;
    uint32_t res = (r1 << (s2 + s3)) | (r2 << s3) | r3;
    return res;
}

// Modified DES encrypt single 64-bit block
u64 moddes_encrypt(u64 P, u64 K, int s1, int s2, int s3, int s1p, int s2p, int s3p, bool x32_on=true) {
    // initial permutation: treat P as left-aligned for permute function
    u64 P_left = P; // getbit expects left-aligned 64-bit
    u64 ip_low = permute(P_left, IP, 64); // low 64 bits actually contain 64-bit permuted value
    u32 L = (u32)(ip_low >> 32);
    u32 R = (u32)(ip_low & 0xFFFFFFFFu);

    // key schedule
    u64 subkeys[16];
    key_schedule(K, subkeys);

    for (int r=0;r<16;++r) {
        u32 Lprev = L;
        L = R;
        // F-function
        u64 T48 = expand32(R);            // low 48 bits
        u64 K48 = subkeys[r];
        u64 Tx = Xo48(T48, K48, s1, s2, s3); // Xo instead of XOR
        u32 S_out = sbox_subst(Tx);
        u32 P_out = permute32(S_out);
        // combine Li-1 Xo P_out
        u32 Ri;
        if (x32_on) Ri = Xo32(Lprev, P_out, s1, s2, s3);
        else Ri = Lprev ^ P_out;
        R = Ri;
    }
    // preoutput: swap (R,L)
    u64 pre = (((u64)R) << 32) | (u64)L;
    // FP needs left-aligned input; build left-aligned 64-bit value:
    u64 pre_left = (pre & (~0ULL >> 0)); // we treat it as left-aligned by placing bits at top
    // But our permute function expects left-aligned; to produce left-aligned, shift to top:
    u64 pre_left_aligned = pre << 0; // pre currently low-aligned; getbit uses left-aligned positions
    // To use permute, we must left-align: move low bits to MSB side:
    pre_left_aligned = pre << 0; // but getbit uses positions 1..64 referencing MSB bit; so set as left-aligned:
    // Build left-aligned value explicitly:
    u64 left_aligned = 0;
    for (int i=0;i<64;++i) {
        int bit = (int)((pre >> (63 - i)) & 1ULL); // bit i from MSB? easier: compute using loop
        // But pre is low-aligned; to get bit position j from MSB side: bit index = 64 - position
    }
    // Simpler: use permute that expects left-aligned: build a left-aligned 64-bit variable from pre (low-aligned)
    u64 tempLeft = 0;
    for (int i=0;i<64;++i) {
        // get bit i from pre treating bit 0 as MSB: compute pos_from1 = 64 - i
        // But easier: setbit in left-aligned for each position using pre's bit at (63-i)
        int b = (int)((pre >> (63 - i)) & 1ULL);
        if (b) tempLeft |= (1ULL << (64 - (i+1)));
    }
    u64 cipher_low = permute(tempLeft, FP, 64);
    // cipher_low is low-aligned 64-bit result
    u64 cipher = cipher_low; // low aligned
    return cipher;
}

// helper print hex 64
void print_hex64(u64 v) { printf("%016llX\n", (unsigned long long)v); }

int main(int argc, char** argv) {
    // default sample
    u64 P = 0x0123456789ABCDEFULL;
    u64 K = 0x133457799BBCDFF1ULL;
    // default segment sizes (must sum to 48). Paper uses {2,4,6,8,10,12} choices;
    // default choose 16/16/16 (fallback)
    int s1=16,s2=16,s3=16,s1p=16,s2p=16,s3p=16;
    bool x32_on = true;
    if (argc==7) {
        s1 = atoi(argv[1]); s2=atoi(argv[2]); s3=atoi(argv[3]);
        s1p = atoi(argv[4]); s2p=atoi(argv[5]); s3p=atoi(argv[6]);
    }
    u64 C = moddes_encrypt(P,K,s1,s2,s3,s1p,s2p,s3p,x32_on);
    printf("Plain : "); print_hex64(P);
    printf("Key   : "); print_hex64(K);
    printf("Cipher: "); print_hex64(C);
    return 0;
}
